{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
<div class="container-fluid p-4">
    <h1 class="mt-2">Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
    <div class="container-fluid mt-2 mb-2">
        <a href="{{ path('episode_index') }}">retour</a>

        <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">Ã©diter</a>
    </div>

    {{ include('episode/_delete_form.html.twig') }}
    <h3 class="mt-5 mb-2">Commentaires</h3>
    {% if app.user %}
        <div class="container mt-5">
            <div class="row">
                <div class="col-6">
                 {{ include('comment/_form.html.twig') }}
               </div>
            </div>
        </div>
            {% endif %}
    {% for comment in comments %}
        <div class="jumbotron section mt-5">
            <p class="text-secondary font-weight-bolder">Commentaires de {{ comment.author.email}}</p>
            <p>{{ comment.comment }}</p>
            <p>Note : {{ comment.rate }} </p>
            <p>{{ comment.date|date('d/m/Y') }}</p>
        </div>
    {% endfor %}
</div>
{% endblock %}
