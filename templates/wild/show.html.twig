{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-1 justify-content-center">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>

            {% for season in seasons %}
                <span class="badge badge-light"><a href="{{slug}}/saison{{ season.id}}">Saison {{ season.seasonNumber }}</a></span>
            {% endfor %}

        </div>
    </div>
