{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
<div class="container-fluid m-4">
    <h1>Toutes les séries de la table program : </h1>
    {% for program in programs %}
        <div>
            <h2><a href="wild/show/{{program.slug}}">{{ loop.index }} / {{ program.title }}</h2>
            <a href="">Catégorie : {{ program.category.name }}</a>
            <p>{{ program.summary }}</p>
            {% if program.actors is not empty %}
                <p>{% for actor in program.actors %}
                        {{ actor.name }},
                    {% endfor %}</p>
            {% else %}
                <p>Pas d'acteur dans cette série</p>
            {% endif %}
        </p>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
    <a href="{{ path('wild_show', { 'slug': "walking-dead" }) }}">
        Testing show() method from WildController with a real program s slug.
    </a>
    <br>
    <a href="{{ path('wild_index') }}">
        Testing index() method from WildController to view all programs.
    </a>
        </div>
{% endblock %}

